PROGRAM ARMSTRONG_FINDER
 IMPLICIT NONE
  INTEGER::N,I,N1,N2,CHECK

PRINT*,"ENTER INITIAL RANGE OF FINDING ARMSTRONG NOS"
  READ*,N1,N2

DO I=N1,N2,1
  PRINT*,"CHECK RESULT:",CHECK(I)
 IF( CHECK(I) == 1)THEN
  
  PRINT*,"THIS IS A ARMSTRONG NO:",I
 ELSE
  CYCLE
 ENDIF
END DO

END PROGRAM ARMSTRONG_FINDER








INTEGER FUNCTION CHECK(N)
   IMPLICIT NONE
   INTEGER,INTENT(IN)::N
   INTEGER::DIG,I,TEMP,K=0,DIG_POWER=0
    TEMP=N

   DO
    IF(TEMP==0)THEN
     EXIT
    ELSE
     TEMP=TEMP/10
     K=K+1
    ENDIF
   END DO

   TEMP=N
   
   DO I=1,K
    
    IF(TEMP==0)THEN
     EXIT
    ELSE
    DIG=MOD(TEMP,10)
    TEMP=TEMP/10
    DIG_POWER=DIG_POWER+DIG**K
    ENDIF
   END DO

   IF(DIG_POWER == N)THEN
    CHECK=1
   ELSE
     CHECK=0
   ENDIF
 
 END FUNCTION CHECK
